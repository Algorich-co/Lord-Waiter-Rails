<div class="section container">
	<div class="row">
		<div class="col s12 m6 offset-m3">
			<div class="card form-wrapper">
				<div class="card-content">


					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

					<h4 class="center bottom-margin-5">Forgot your password?</h4>

					<%= devise_error_messages! %>

					<div class="field input-field bottom-margin-5">
						<%= f.email_field :email, autofocus: true, required: true, class: "validate" %>
						<%= f.label :email %>
					</div>

					<%= f.submit "Send reset instructions", class: "btn-large waves-effect waves-light form-button" %>
					<% end %>

					<%= render "restaurant_managers/shared/links" %>

				</div>
			</div>
		</div>
	</div>
</div>