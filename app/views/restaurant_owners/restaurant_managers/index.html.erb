
<div class="section" id="index-banner">
	<div class="container">
		<h1 class="header center">Managers</h1>
		<div class="row center">
			<a href="<%= new_restaurant_owners_restaurant_manager_path %>" class="btn-large waves-effect waves-light">Create new Manager</a>
		</div>
	</div>
</div>

		<%= render('layouts/flash') %>    



<% if @restaurant_managers.any? %>
<section class="section">
	<div class="container">
		<div class="collection z-depth-3">
			<% @restaurant_managers.each do |restaurant_manager| %>
			<%= link_to "#{restaurant_manager.name}", restaurant_owners_restaurant_manager_path(restaurant_manager), :class => "collection-item waves-effect waves-light waves-red" %>
			<% end %>
		</div>
	</div>
</section>
<% else %>

<section class="section valign-wrapper no-content-created">
	<div class="container">
		<h5 class="center-align">
			Looks like you havn't created a Manager, create one by clicking the above button.
		</h5>
	</div>
</section>
<% end %>	