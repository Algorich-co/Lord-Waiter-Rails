<div class="section" id="index-banner">
	<div class="container">
		<h3 class="header center"><%= @food_item.title %></h3>
		<div class="row center">
			<%= link_to ("" + content_tag(:i, "edit", :class => "material-icons left")).html_safe, edit_restaurant_owners_food_item_path(@food_item), :class => "btn-floating btn-large waves-effect waves-light" %>
		</div>
	</div>
</div>


<section class="section">
	<div class="container">
		<div class="row">
			<div class="">

				<%= image_tag(@food_item.image.url(:medium), class: "materialboxed col s12 m6 l6") %>

			</div>

			<div class="col s12 m6 l6">
				<h5 class="my-pink-text">Name:</h5>
				<p><%= @food_item.title %></p>	

				<h5 class="my-pink-text">Category:</h5>
				<p><%= @food_item.category.name %></p>

				<h5 class="my-pink-text">Price:</h5>
				<p><%= @food_item.price %></p>

				<h5 class="my-pink-text">Featured:</h5>
				<p><%= @food_item.featured? %></p>
				
				
			</div>

		</div>
	</div>		
</div>
</section>