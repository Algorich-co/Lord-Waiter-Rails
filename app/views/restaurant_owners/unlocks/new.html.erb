<div class="container">
	<h3>Resend unlock instructions</h3>
	<div class="row">

		<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div class="field input-field col s12">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true %>
		</div>

		<div class="row actions col s12">
			<%= f.submit "Resend unlock instructions", class: "waves-effect waves-light btn" %>
		</div>
		<% end %>

		<%= render "restaurant_owners/shared/links" %>
	</div>
</div>