
<div class="section" id="index-banner">
	<div class="container">
		<h1 class="header center">Table</h1>
		<div class="row center">
			<a href="<%= new_restaurant_owners_table_path %>" class="btn-large waves-effect waves-light">Create new Table</a>
		</div>
	</div>
</div>


<% if @tables.any? %>
<section class="section">
	<div class="container">
		<div class="collection z-depth-3">
			<% @tables.each do |table| %>
			<%= link_to "#{table.name}", restaurant_owners_table_path(table), :class => "collection-item waves-effect waves-light waves-red" %>
			<% end %>
		</div>
	</div>
</section>
<% else %>

<section class="section valign-wrapper no-content-created">
	<div class="container">
		<h5 class="center-align">
			Looks like you havn't created a Table, create one by clicking the above button.
		</h5>
	</div>
</section>
<% end %>	