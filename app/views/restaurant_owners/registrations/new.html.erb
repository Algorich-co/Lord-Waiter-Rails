<div class="container">
  <h3>Sign up</h3>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field input-field col s12">
      <%= f.text_field :full_name, autofocus: true, required: true, class: "validate #{error_class(resource, :full_name)}" %>
      <%= f.label :full_name, "data-error" => show_errors(resource, :full_name) %>
    </div>

    <div class="field input-field col s12">
      <%= f.text_field :contact, required: true, class: "validate #{error_class(resource, :contact)}" %>
      <%= f.label :contact, "data-error" => show_errors(resource, :contact) %>
    </div>

    <div class="field input-field col s12">
      <%= f.email_field :email, class: "validate #{error_class(resource, :email)}"%>
      <%= f.label :email, "data-error" => show_errors(resource, :email) %>
    </div>

    <div class="field input-field col s12">
      <%= f.password_field :password, autocomplete: "off", class: "validate #{error_class(resource, :password)}" %>
      <%= f.label :password, 'Password ( 6 characters minimum )', "data-error" => show_errors(resource, :password) %>
    </div>

    <div class="field input-field col s12">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate #{error_class(resource, :password_confirmation)}" %>
      <%= f.label :password_confirmation, "data-error" => show_errors(resource, :password_confirmation) %>
    </div>

    <div class="field input-field col s12">
      <%= recaptcha_tags %>
      <br>
    </div>

    <div class="row actions col s12">
      <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <%= render "restaurant_owners/shared/links" %>
  </div>

</div>