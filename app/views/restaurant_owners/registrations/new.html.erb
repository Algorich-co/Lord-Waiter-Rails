<div class="container">
  <h3>Sign up</h3>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field input-field col s12">
      <%= f.label :full_name %><br />
      <%= f.text_field :full_name, autofocus: true, required: true %>
    </div>

    <div class="field input-field col s12">
      <%= f.label :contact %><br />
      <%= f.text_field :contact, required: true %>
    </div>

    <div class="field input-field col s12">
      <%= f.label :email %><br />
      <%= f.email_field :email%>
    </div>

    <div class="field input-field col s12">
      <%= f.label :password, 'Password ( 6 characters minimum )' %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field input-field col s12">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field input-field col s12">
      <%= recaptcha_tags %>
      <br>
    </div>

    <div class="row actions col s12">
      <%= f.submit "Sign up", class: "waves-effect waves-light btn" %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <%= render "restaurant_owners/shared/links" %>
  </div>

</div>