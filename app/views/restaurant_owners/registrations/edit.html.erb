<div class="container">
  <h3>Edit <%= resource_name.to_s.humanize %></h3>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field input-field col s12">
      <%= f.email_field :email, autofocus: true, class: "validate #{error_class(resource, :email)}" %>
      <%= f.label :email, "data-error" => show_errors(resource, :email) %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field input-field col s12">
      
      <%= f.password_field :password, autocomplete: "off", class: "validate #{error_class(resource, :password)}" %>
      <%= f.label :password, "data-error" => show_errors(resource, :password) %> <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field input-field col s12">
      
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate #{error_class(resource, :password_confirmation)}" %>
      <%= f.label :password_confirmation, "data-error" => show_errors(resource, :password_confirmation) %>
    </div>

    <div class="field input-field col s12">
      <%= f.password_field :current_password, autocomplete: "off", class: "validate #{error_class(resource, :current_password)}" %>
      <%= f.label :current_password, "data-error" => show_errors(resource, :current_password) %> <i>(we need your current password to confirm your changes)</i>
    </div>

    <div class="field input-field col s12">
      <%= recaptcha_tags %>
      <br>
    </div>

    <div class="row actions col s12">
      <%= f.submit "Update", class: "waves-effect waves-light btn" %>
    </div>
    <% end %>

    <h4>Cancel my account</h4>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "red accent-4 waves-effect waves-light btn" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>