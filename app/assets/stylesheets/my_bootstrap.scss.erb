@import "bootstrap";
@import "font-awesome";
@import "simple-line-icons";
@import "lato";
@import "pricing-table";
@import "new-age";
@import "snackbar";
@import "snackbar-material"; //optional


.scrollbarstyle::-webkit-scrollbar-track
{
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
	border-radius: 0px;
	background-color: #F5F5F5;
}

.scrollbarstyle::-webkit-scrollbar
{
	width: 12px;
	background-color: #F5F5F5;
}

.scrollbarstyle::-webkit-scrollbar-thumb
{
	border-radius: 0px;
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
	background-color: green;
}

.primary_dark_bg{
	background-color: #1d1e2e;
	color: white;
}

.primary_light_bg{
	background-color: #27283d;
	color: white;
}

.primary_bg{
	background-color: #202133;
	color: white;
}

.accent_bg{
	background-color: #FFC107;
	color: black;
}

.fb_blue{
	background-color: #01579b !important;
}

.pattern_bg{
	color: white;
	background: url(<%= asset_path('img/bg-pattern.png') %>), #202133;
	background: url(<%= asset_path('img/bg-pattern.png') %>), -webkit-linear-gradient(to left, #202133, #202133);
	background: url(<%= asset_path('img/bg-pattern.png') %>), linear-gradient(to left, #202133, #202133); 
}



.snackbar.error {
  background-color: red;
}
.snackbar.alert {
  background-color: yellow;
  color: black;
}
.snackbar.notice {
  background-color: green;
}