.fixed-announcement {
	position: relative;
	height: 48px;
	width: 100%;
	z-index: 999;
}
.fixed-announcement .announcement {
	position: absolute;
	height: inherit;
	width: inherit;
	background-color: $secondary-color;
}
.fixed-announcement .announcement .container {
	color: #fff;
	padding: 14px 0;
	font-size: .9rem;
}
.fixed-announcement .announcement .container a {
	color: #32b9fb;
}
a {
	text-decoration: none;
}
a.button-collapse.top-nav {
	position: absolute;
	text-align: center;
	height: 48px;
	width: 48px;
	left: 7.5%;
	top: 55px;
	float: none;
	margin-left: -8px;
	color: #fff;
	font-size: 36px;
	z-index: 2;
}

ul.side-nav.fixed:hover {
	overflow-y: auto;
}

ul.side-nav.fixed {
	overflow: hidden;
}

.owner-padding {
	padding-left: 300px;
}

a.button-collapse.top-nav i {
	font-size: 32px;
}

@media only screen and (max-width : 992px) {
	.owner-padding {
		padding-left: 0;
	}
	#index-banner h1 {
		margin-top: 56px;
	}
}


